{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext",
      "es2018.promise",
      "es2017",
      "dom",
      "esnext.asynciterable",
      "es2021"
    ],
    "allowJs": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,

    // lib settings
    "removeComments": true,
    "sourceMap": false,
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "strictNullChecks": true, // ensure strict null checks for nullable, undefined, and ?
    "strictPropertyInitialization": true // ensure properties with ? or possibly undefined/null are checked
  },
  "include": ["src/**/*"]
}
